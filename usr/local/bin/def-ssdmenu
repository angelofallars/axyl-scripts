#!/bin/env bash

source colors

FONT="Source Code Pro Medium:size=12"

[[ -z "$DISPLAY" ]] && exit 1
choice=$(echo -e "0: Now\n1: In 5 Seconds\n2: In 10 Seconds\n3: Current Window\n4: Selected Area" | dmenu -c -i -l 10 -nb "$bg" -nf "$fg" -sb "$altbg" -sf "$fg" -fn "$FONT" -p "Screenshot:" | cut -d ':' -f 1)
[[ -z "$choice" ]] && exit 1
case "$choice" in
  0) takeshot --now  ;;
  1) takeshot --in5  ;;
  2) takeshot --in10 ;;
  3) takeshot --win  ;;
  4) takeshot --area ;;
esac

